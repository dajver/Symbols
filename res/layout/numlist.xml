  <TableLayout
      android:layout_width="324dp"
      android:layout_height="wrap_content" >
  

  <LinearLayout
  android:layout_width="265dip"
  android:orientation="vertical"
  android:layout_height="wrap_content">


      <TextView
          android:id="@+id/text1"
